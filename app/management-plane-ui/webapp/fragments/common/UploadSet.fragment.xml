<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload"
>
    <Dialog
        id="dialogUploadDocuments"
        title="Upload Files"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        stretch="false"
    >
        <upload:UploadSet
            id="usReportFileAttachments"
            instantUpload="false"
            uploadEnabled="true"
            beforeItemAdded="onCheckFileCount"
            fileTypeMismatch="onFileTypeMismatch"
            fileTypes="XLSX,DOCX,PPT,PDF"
            multiple="true"
            httpRequestMethod="Put"
            mode="None"
        />

        <beginButton>
            <Button
                text="Upload Documents"
                press="onUploadReportDocuments"
            />
        </beginButton>
        <endButton>
            <Button
                text="Close"
                press="onCloseUploadDialog"
                type="Reject"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
